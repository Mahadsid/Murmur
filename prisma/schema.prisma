generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Channel {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // foreign keys
  workspaceId String //Kinde organization ID
  createdById String // kinde user Id

  message Message[]

  @@unique([workspaceId, name])
}

model Message {
  id String @id @default(uuid())

  content  String
  imageUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId     String
  authorEmail  String
  authorName   String
  authorAvatar String

  channel   Channel? @relation(fields: [channelId], references: [id])
  channelId String?

  //Threads/replies relation
  parentMessage Message?  @relation("MessageThread", fields: [threadId], references: [id], onDelete: Cascade)
  threadId      String?
  replies       Message[] @relation("MessageThread")

  MessageReaction MessageReaction[]
}

//model for emoji reactiion
model MessageReaction {
  id String @id @default(uuid())

  emoji String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //user data
  userId     String
  userEmail  String
  userName   String
  userAvatar String

  //relationship with message one to many, one msg many reaction
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String

  @@unique([messageId, userId, emoji])
}
